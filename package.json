{
  "name": "ooxml-viewer",
  "displayName": "OOXML Viewer",
  "description": "Displays the contents of OOXML files",
  "version": "1.0.0",
  "license": "MIT",
  "publisher": "yuenm18",
  "homepage": "https://github.com/yuenm18/ooxml-viewer-vscode/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuenm18/ooxml-viewer-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/yuenm18/ooxml-viewer-vscode/issues"
  },
  "icon": "resources/icons/icon.png",
  "keywords": [
    "ooxml"
  ],
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ooxmlViewer.viewContents",
    "onView:ooxmlViewer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ooxmlViewer.viewContents",
        "title": "Open OOXML Package",
        "when": "resourceLangId == ooxml"
      },
      {
        "command": "ooxmlViewer.clear",
        "title": "Clear",
        "when": "view == ooxmlViewer"
      },
      {
        "command": "ooxmlViewer.showDiff",
        "title": "Compare with Previous",
        "when": "view == ooxmlViewer"
      }
    ],
    "languages": [
      {
        "id": "ooxml",
        "extensions": [
          ".docx",
          ".xlsx",
          ".pptx",
          ".odt",
          ".ods",
          ".odp",
          ".docm",
          ".xlsm",
          ".pptm",
          ".dotx",
          ".xltx",
          ".xltm",
          ".potx",
          ".sldx",
          ".ppsx"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ooxmlViewer.viewContents",
          "group": "navigation",
          "when": "resourceLangId == ooxml"
        }
      ],
      "view/title": [
        {
          "command": "ooxmlViewer.clear",
          "group": "navigation",
          "when": "view == ooxmlViewer"
        }
      ],
      "view/item/context": [
        {
          "command": "ooxmlViewer.showDiff",
          "group": "navigation",
          "when": "view == ooxmlViewer"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "ooxmlViewer",
          "name": "OOXML Viewer",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test-watch": "tsc -watch -p ./",
    "pretest": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint -c .eslintrc.js --ext .ts ./"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/glob": "^7.1.3",
    "@types/jszip": "^3.4.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.14.6",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.8",
    "@types/vkbeautify": "^0.99.2",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "sinon": "^9.2.1",
    "ts-loader": "^8.0.7",
    "typescript": "^3.9.7",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "jszip": "^3.5.0",
    "vkbeautify": "^0.99.3"
  }
}
